package lab2;

import java.util.Random;

public class Pizza {

	public static void main(String[] args) {
		Random rand = new Random();
        for(int i=1;i<=30;i++){
            switch(rand.nextInt(3)+1){
                case 1:
                	BBQ pizza pizza1 = new BBQ pizza(i, "BBQ");
                	System.out.println(pizza1.showInfo());
                    break;
                case 2:
                	Havai pizza pizza2 = new Havai pizza(i, "Havai");
                	System.out.println(pizza2.showInfo());
                    break;
                case 3:
                	Holimog pizza pizza3 = new Holimog pizza(i,"Holimog");
                	System.out.println(pizza3.showInfo());
                    break;
                case 4:
                	Baylag pizza pizza4 = new SamartaiChiher(i,"samartai");
                	System.out.println(pizza4.showInfo());
                    break;
            }
        }
	}
}
