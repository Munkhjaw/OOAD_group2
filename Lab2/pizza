package Pizza;
import java.util.*; 
public class Pizza1 {
		String name;
		int armor;
		public Pizza(String name) {
			this.name=name;	
		}
		public void attack() {
		      // This constructor has one parameter, name.
			   System.out.println("Pizza-г захиалганд дуудаж байна. :" + name );
		   }
	}
	class BBQ pizza extends Pizza{
		
		
		int hit_points=0;
		public BBQ pizza(String name,int hit_points) {
			super(name);
			this.hit_points=hit_points;
			
		}
		
		public void attack() {
		      // This constructor has one parameter, name.
			  System.out.println("BBQ буюу тахиатай  pizza-г захиалганд дуудаж байна.:" + name );
		   }


	}
	class Havai pizza extends Pizza{
		
		int armor;
		int hit_points=0;
		public Havai pizza(String name,int hit_points) {
			super(name);
			this.hit_points=hit_points;
			
		}
		
		public void attack() {
		      // This constructor has one parameter, name.
			  System.out.println("Havai буюу ананастай pizza-г захиалганд дуудаж байна.:" + name );
		   }


	}

	class Holimog pizza extends Pizza{
		
		int armor;
		int hit_points=0;
		
		public Holimog pizza(String name,int hit_points) {
			super(name);
			this.hit_points=hit_points;
			
		}
		public void attack() {
		      // This constructor has one parameter, name.
			  System.out.println("Holimog буюу chinjuu hiamtai pizza-г захиалганд дуудаж байна.:" + name );
		   }


	}
	public class film {

		public static void main(String[] args) {
			// TODO Auto-generated method stub
			Pizza p=new Pizza("pizza");
			
			Pizza w=new BBQ pizza("BBQ",2);
			Pizza e=new Havai pizza("Havai",4);
			Pizza f=new Holimog pizza("Holimog",3); 
			ArrayList<Pizza> al=new ArrayList<Pizza>();  
			al.add(p);//pizza обьектыг нэмэх
			al.add(w);//BBQ pizza обьектыг нэмэх
			al.add(e);//Havai pizza обьектыг нэмэх
			al.add(f);//Holimog pizza обьектыг нэмэх
			for(Pizza b:al){  
		        b.attack();  
		    }  
		}

	}

}
